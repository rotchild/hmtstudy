<script type="text/javascript">

function SetCookie(name,value,oday) {
//            debugger;
    var odate=new Date();
    odate.setDate(odate.getDate()+oday);
    document.cookie = name+"=" + value+";expires="+odate;
}

function GetCookie() {
//            debugger;
    var _cookie = document.cookie;
    var username = document.getElementById('username');
    if (_cookie == '' || _cookie == undefined || _cookie == null) {//没有cookie
        SetCookie("username",username.value,1);
    }else{
        username.value=_cookie.split("username=")[1];
    }
}
GetCookie();
</script>